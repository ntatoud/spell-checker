    \section*{Correcteur Orthographique}
    \subsection*{Conception préliminaire}
   
    \subsubsection*{Signatures}

	\begin{itemize}[label=$\ $, leftmargin=1cm]
		 \item \textbf{fonction} remplacerIemeLettre(mot : Mot, i : NaturelNonNul):Mot
		 \item \textbf{fonction} supprimerIemeLettre(mot : Mot, i : NaturelNonNul):Mot
		 \begin{itemize}[label=$| $]
            \item \textbf{précondition:} longueur(mot)$>$1 et i$<$longueur
         \end{itemize}
		 \item \textbf{fonction} inverserDeuxLettresConsecutives(mot : Mot, i : NaturelNonNul):Mot
		 \begin{itemize}[label=$| $]
            \item \textbf{précondition:} longueur(mot)$>$1 et i$<$longueur-1
         \end{itemize}
		 
		 \item \textbf{fonction} insererLettre(mot : Mot, i : NaturelNonNul):ListeMots
		 \begin{itemize}[label=$| $]
            \item \textbf{précondition:} i$<$ longueur(mot)+1
         \end{itemize}
         \item \textbf{fonction} decomposerMot(mot : Mot, i : NaturelNonNul):Mot:Mot
		 \begin{itemize}[label=$| $]
            \item \textbf{précondition:} i$<$ longueur(mot)
         \end{itemize}
         \item \textbf{fonction} reduireLaCasse(mot : Mot):Mot
        
	\end{itemize} 
    
